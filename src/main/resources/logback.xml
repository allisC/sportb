<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern> [%thread] [%-5level] %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="com.epam" level="debug" />
<!-- 	<logger name="org.springframework" level="debug" /> -->

</configuration>
